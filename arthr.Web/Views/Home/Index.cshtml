@using Microsoft.AspNetCore.Authentication;
@{
    Layout = "~/Views/Shared/_React.cshtml";
    ViewData["Title"] = "Home Page";
}
<div id="mountNode"></div>

<div>access token @await ViewContext.HttpContext.Authentication.GetTokenAsync("access_token")</div>

<dl>
    @foreach (var claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dt>@claim.Value</dt>
    }
</dl>

<script>
    window.accessToken = '@await ViewContext.HttpContext.Authentication.GetTokenAsync("access_token")';
</script>

